{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Posts list</h2>
        <a href="{{ path('app_post_create') }}" class="btn btn-primary">Create new post</a>
        {% for post in posts %}
            <div class="card" style="width: 18rem;margin-top:1rem">
                <img src="{{ image_directory ~ post.image.fileName }}" class="card-img-top" alt="{{ post.image.originalName }}">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}